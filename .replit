# Stock AI Platform - Replit Configuration
# Backend API deployment configuration

modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-23_11"

# Main run command (for development in Replit)
run = "cd api && uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload"
entrypoint = "api/app/main.py"

# Hidden files in Replit editor
hidden = [".pythonlibs", "venv", ".pytest_cache", "__pycache__", ".git", "node_modules"]

# Production deployment configuration
[deployment]
run = ["sh", "-c", "cd api && uvicorn app.main:app --host 0.0.0.0 --port 8000"]
deploymentTarget = "cloudrun"
ignorePorts = false

# Port configuration
[[ports]]
localPort = 8000
externalPort = 80

# Environment variables (set actual values in Replit Secrets)
[env]
PYTHONPATH = "${REPL_HOME}/api"
PYTHONUNBUFFERED = "1"
PORT = "8000"
ENVIRONMENT = "production"

# Python language configuration
[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

# Package management
[packager]
language = "python3"
ignoredPackages = ["unit_tests"]

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

# Debugger support
[debugger]
support = true

[debugger.interactive]
transport = "localhost:0"
startCommand = ["dap-python", "api/app/main.py"]

[debugger.interactive.integratedAdapter]
dapTcpAddress = "localhost:0"

[debugger.interactive.initializeMessage]
command = "initialize"
type = "request"

[debugger.interactive.initializeMessage.arguments]
adapterID = "debugpy"
clientID = "replit"
clientName = "replit.com"
columnsStartAt1 = true
linesStartAt1 = true
locale = "en-us"
pathFormat = "path"
supportsInvalidatedEvent = true
supportsProgressReporting = true
supportsRunInTerminalRequest = true
supportsVariablePaging = true
supportsVariableType = true

[debugger.interactive.launchMessage]
command = "attach"
type = "request"

[debugger.interactive.launchMessage.arguments]
logging = {}
